mixin list(items,liclass)
    ul&attributes(attributes)
        each item in items
            - var linkatts = {'href': item.link,'class': item.class}
            if (thisPage == item.title)
                li(class=[liclass, liclass + '--active', 'caret'])
                    a&attributes(linkatts)= item.title
            else
                li(class=liclass)
                    a&attributes(linkatts)= item.title

header.header
    .container
        .header__logo
            .logo
                .logo__img
                span.logo__text
                    | Your Logo
        .header__menu
            nav(role='navigation').menu
                +list([
                {'title': 'Home', 'link': 'index.html'},
                {'title': 'Portfolio', 'link': 'portfolio.html'},
                {'title': 'About', 'link': 'about.html'},
                {'title': 'Contact', 'link': 'contact.html'}
                ], 'menu__list__item').menu__list
        .header__search
            .search
                form#search-form
                    input(type='search' placeholder='Search')