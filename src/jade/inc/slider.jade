mixin slider(items)
    each item in items
        - var atts = {'src': item.img, 'alt': 'image'}
        .slider--item
            .slider--img
                img&attributes(atts)
            .container
                .slider--content
                    h1.slider--title= item.title
                    p.slider--text= item.text
                    a(href=item.link).slider--btn
                        | Learn More


