//- mixin list
mixin list(items,liclass)
    ul&attributes(attributes)
        each item in items
            - var linkatts = {'href': item.link,'class': item.class}
            if (active == item.title)
                li(class=[liclass, liclass + '--active'])
                    a&attributes(linkatts)= item.title
            else
                li(class=liclass)
                    a&attributes(linkatts)= item.title

